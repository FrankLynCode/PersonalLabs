<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.macadmin.mythreadedapp11.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Load Image 1"
        android:id="@+id/btnshow1"
        android:layout_marginTop="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Display"
        android:id="@+id/btnDisplay"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:onClick="displayHandler"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Erase"
        android:id="@+id/button2"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:onClick="eraseHandler"/>


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imgDisplay"
        android:visibility="invisible"
        android:layout_toEndOf="@+id/btnshow1"
        android:layout_toRightOf="@+id/btnshow1"
        android:src="@drawable/me_image1" />



    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/showimgparent1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView1"
            android:src="@drawable/me_image2"
            android:visibility="invisible"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/showimgparent2"
        android:layout_alignTop="@+id/showimgparent1"
        android:layout_toRightOf="@+id/btnshow1"
        android:layout_toEndOf="@+id/btnshow1"

        android:layout_centerVertical="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:src="@drawable/me_image3"
            android:visibility="invisible"
             />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/showimgparent3"
        android:layout_alignTop="@+id/showimgparent2"
        android:layout_toRightOf="@+id/btnshow2"
        android:layout_toEndOf="@+id/btnshow2"

        android:layout_centerVertical="true">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView3"
            android:src="@drawable/me_image4"
            android:visibility="invisible"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOAD IMAGE 2"
        android:id="@+id/btnshow2"
        android:layout_alignTop="@+id/btnshow1"
        android:layout_toRightOf="@+id/btnshow1"
        android:layout_toEndOf="@+id/btnshow1"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOAD IMAGE3"
        android:id="@+id/btnshow3"
        android:layout_alignTop="@+id/btnshow2"
        android:layout_toRightOf="@+id/btnshow2"
        android:layout_toEndOf="@+id/btnshow2"/>



</RelativeLayout>
